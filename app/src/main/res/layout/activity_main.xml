<?xml version="1.0" encoding="UTF-8"?>

    <androidx.constraintlayout.widget.ConstraintLayout tools:context=".MainActivity" android:animateLayoutChanges="true" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView android:layout_height="100dp" android:layout_width="100dp" android:elevation="12dp" android:layout_marginEnd="12dp" android:layout_marginTop="-24dp" android:src="@drawable/ic_doctor" app:layout_constraintTop_toTopOf="@id/card_view" app:layout_constraintEnd_toEndOf="@id/card_view" android:id="@+id/img_doctor"/>


    <androidx.cardview.widget.CardView android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/card_view" android:layout_marginHorizontal="16dp" app:cardBackgroundColor="@color/blue" app:cardCornerRadius="16dp" android:layout_marginBottom="50dp" app:cardElevation="10dp" app:layout_constraintBottom_toTopOf="@id/container">


    <androidx.constraintlayout.widget.ConstraintLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:padding="24dp">

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" app:layout_constraintTop_toTopOf="parent" android:id="@+id/tv_hospital" android:text="Hospitals" android:textSize="28sp" android:textColor="@color/white" android:textStyle="bold" app:layout_constraintStart_toStartOf="parent"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_marginTop="40dp" android:text="Expand all" android:textSize="18sp" android:textColor="@color/white" app:layout_constraintStart_toStartOf="parent" android:textAllCaps="true" app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@id/tv_hospital"/>

</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>


    <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" app:layout_constraintTop_toTopOf="parent" android:id="@+id/container" app:layout_constraintBottom_toBottomOf="parent" android:gravity="center">

    <Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/btn_one" android:text="Button 1" android:textColor="@color/white" android:background="@drawable/bg_button"/>

    <com.google.android.material.button.MaterialButton android:layout_height="90dp" android:layout_width="90dp" android:id="@+id/btn_circle" android:layout_marginHorizontal="16dp" android:text="Circle" app:cornerRadius="100dp" app:backgroundTint="@color/red" android:insetBottom="0dp" android:insetTop="0dp"/>

    <androidx.appcompat.widget.AppCompatButton android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="Button 3" android:textColor="@color/white" android:backgroundTint="@color/black" android:drawableTint="@color/white" android:drawablePadding="12dp" android:drawableStart="@drawable/ic_car"/>

</LinearLayout>

    <EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/edit_text" android:textSize="24sp" app:layout_constraintBottom_toBottomOf="parent" android:layout_margin="16dp" android:hint="Введите текст"/>

</androidx.constraintlayout.widget.ConstraintLayout>